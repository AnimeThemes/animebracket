<h2>Process Nominees</h2>
<div class="nominee">
    <form action="/admin/?action=nominations&amp;bracket={//bracket/id}" method="post" enctype="multipart/form-data">
        <dl>
            <dt>Image</dt>
            <dd class="image">
                <img src="{{nominee.image}}" />
                <button type="button" id="changeImage">Change Image</button>
            </dd>

            <dt>Name</dt>
            <dd class="name">
                <label for="name">Name</label>
                <input type="text" name="name" id="name" value="{{nominee.name}}" />
            </dd>
            <dt>Source</dt>
            <dd class="source">
                <label for="source">Source</label>
                <input type="text" name="source" id="source" value="{{nominee.source}}" />
            </dd>
        </dl>
        
        <table>
            <thead>
                <tr>
                    <th class="thumb"></th>
                    <th class="name">Name</th>
                    <th class="source">Source</th>
                    <th></th>
                </tr>
            </thead>

        {{#if thisBracketCharacters}}
            <tr>
                <td colspan="4"><h3>Similar Characters in this Bracket</h3></td>
            </tr>
            {{#each thisBracketCharacters}}
                <tr>
                    <td>
                        <a class="thumb" style="background-image:url(//cdn.awwni.me/bracket/{{image}})" href="//cdn.awwni.me/bracket/{{image}}" target="_blank">Thumbnail</a>
                    </td>
                    <td>{{name}}</td>
                    <td>{{source}}</td>
                    <td class="action">
                        <button type="button" class="button" data-id="{{id}}">Use Character</button>
                    </td>
                </tr>
            {{/each}}
        {{/if}}

        {{#if otherBracketCharacters}}
            <tr>
                <td colspan="4"><h3>Similar Characters From Other Brackets</h3></td>
            </tr>
            {{#each otherBracketCharacters}}
                <tr>
                    <td>
                        <a class="thumb" style="background-image:url(//cdn.awwni.me/bracket/{{image}})" href="//cdn.awwni.me/bracket/{{image}}" target="_blank">Thumbnail</a>
                    </td>
                    <td>
                        {{name}}
                        <span class="bracket-name">{{bracket.name}}</span>
                    </td>
                    <td>{{source}}</td>
                    <td class="action">
                        <button type="button" class="button" data-id="{{id}}">Use Character</button>
                    </td>
                </tr>
            {{/each}}
        {{/if}}

        {{#if similar}}
            <tr>
                <td colspan="4"><h3>Similar Nominees</h3></td>
            </tr>
            {{#each similar}}
                <tr>
                    <td>
                        <a class="thumb" style="background-image:url({{image}})" href="{{image}}" target="_blank">Thumbnail</a>
                    </td>
                    <td>{{name}}</td>
                    <td>{{source}}</td>
                    <td class="action">
                        <button class="button">Ignore</button>
                    </td>
                </tr>
            {{/each}}
        {{/if}}

        </table>

        <input type="hidden" name="id" value="{{nominee.id}}" />
        <input type="hidden" name="bracketId" value="{{bracket.id}}" />
        <input type="hidden" name="imageFile" value="{{nominee.image}}" />

        <div class="buttons">
            <button class="button">Add Character</button>
        </div>

        <div class="overlay">
            <div class="cropper">
                <div class="crop">
                    <img src="{{nominee.image}}" />
                </div>
                <div class="side">
                    <h3>Edit Image</h3>
                    <p>All images must be 150x150 px. Use the tool to the left to crop your picture or upload a custom one.</p>
                    <label for="upload" class="button">Upload Image</label>
                    <input type="file" name="upload" id="upload" />
                    <button type="button" class="button crop-submit">Done</button>
                </div>
            </div>
        </div>
    </form>
</div>
