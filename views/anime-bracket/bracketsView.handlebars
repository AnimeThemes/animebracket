<h2>{{title}}</h2>
<ul class="brackets">
    {{#each brackets}}
        {{#isBracketNotHidden .}}
            <li class="bracket-card">
                {{>_card_image}}
                <div class="info">
                    <h3>{{name}}</h3>
                    {{#if winner}}
                        <h4 class="winner">{{winner.name}}</h4>
                    {{else}}
                        <h4>
                            {{title}}
                        </h4>
                    {{/if}}
                    <ul class="actions">
                        {{#hasResults .}}
                            <li><a href="/results/{{perma}}/">Results</a></li>
                        {{/hasResults}}
                        {{#isBracketNominations .}}
                            <li><a href="/nominate/{{perma}}/">Nominate</a></li>
                        {{/isBracketNominations}}
                        {{#isBracketVoting .}}
                            <li><a href="/vote/{{perma}}/">Vote</a></li>
                        {{/isBracketVoting}}
                        {{#isBracketEliminations .}}
                            <li><a href="/vote/{{perma}}/">Vote</a></li>
                        {{/isBracketEliminations}}
                    </ul>
                </div>
            </li>
        {{/isBracketNotHidden}}
    {{/each}}
</ul>