<h3>{{#if header}}{{header}}{{else}}Character Roster{{/if}} - {{characters.length}} entrants</h3>

<ul class="characters mini-card-container">
    {{#each characters}}
        <li class="mini-card">
            <dl>
                <dt>Image</dt>
                <dd class="image"><img src="{{image}}" alt="{{name}}" /></dd>
                <dt>Name</dt>
                <dd class="name">{{name}}</dd>
                <dt>Source</dt>
                <dd class="source">{{source}}</dd>
                {{#if seed}}
                    <dt>Seed</dt>
                    <dd class="seed">{{seed}}</dd>
                {{/if}}
            </dl>
        </li>
    {{/each}}
</ul>